<Window x:Class="Droxid.Views.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Droxid.Views"
        xmlns:vm="clr-namespace:Droxid.ViewModels"
        mc:Ignorable="d"
        Title="StartupWindow" Height="300" Width="400" Background="#2f3136">
    <Window.DataContext>
        <vm:StartupWindowViewModel/>
    </Window.DataContext>
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
        <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border x:Name="dbHeader" Grid.ColumnSpan="2" Background="#36393f">
                <TextBlock  Text="Database" Foreground="White"  HorizontalAlignment="Center" Margin="2"/>
            </Border>
            <Label Grid.Row="1" Grid.Column="0" Content="Server" Foreground="White"/>
            <TextBox x:Name="txtDBServer" Grid.Row="1" Grid.Column="1" Text="localhost"/>
            <Label Grid.Row="2" Grid.Column="0" Content="User" Foreground="White"/>
            <TextBox x:Name="txtDBUser" Grid.Row="2" Grid.Column="1" Text="Droxid"/>
            <Label Grid.Row="3" Grid.Column="0" Content="Password" Foreground="White"/>
            <TextBox x:Name="txtDBPassword" Grid.Row="3" Grid.Column="1" Text="Droxid"/>
            <Label Grid.Row="4" Grid.Column="0" Content="Database" Foreground="White"/>
            <TextBox x:Name="txtDBName" Grid.Row="4" Grid.Column="1" Text="droxid"/>

        <Border x:Name="appHeader" Grid.ColumnSpan="2" Grid.Row="5" Background="#36393f" Margin="0,4,0,0">
                <TextBlock  Text="Droxid" Foreground="White"  HorizontalAlignment="Center" Margin="2"/>
            </Border>
            <Label Grid.Row="6" Grid.Column="0" Content="User" Foreground="White"/>
            <TextBox x:Name="txtUsername" Grid.Row="6" Grid.Column="1" Text="R0kkxSynetique"/>


        <Button Grid.Row="7" Grid.ColumnSpan="2" Content="Submit" Margin="0,4,0,0" Click="btnSubmit"/>
    </Grid>
</Window>
