<UserControl x:Class="Droxid.Views.UserControls.MinIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Droxid.Views.UserControls"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance local:MinIcon,IsDesignTimeCreatable=True}"
             d:DesignHeight="40" d:DesignWidth="40" DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <Viewbox xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Canvas Width="20" Height="20">
            <Canvas.RenderTransform>
                <TranslateTransform X="0" Y="0"/>
            </Canvas.RenderTransform>
            <Path Name="Path" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Fill="{Binding Fill}">
                <Path.Data>
                    <PathGeometry Figures="M3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" FillRule="EvenOdd"/>
                </Path.Data>
            </Path>
        </Canvas>
    </Viewbox>
</UserControl>
